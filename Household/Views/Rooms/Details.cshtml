@model Household.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl>              
        <dd>
            <table class="table">
                <tr>
                    <th>Product Type</th>
                    <th>Make</th>
                    <th>Model</th>

                </tr>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.ProductType.Name</td>
                        <td>@item.Make</td>
                        <td>@item.Model</td>

                    </tr>
                }
            </table>
        </dd>
      
        <dd>
            <img width="600" height="" src="~/@Url.Content(Model.ImagePath)" />
            <br />
        </dd>


        @*<dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>*@

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
